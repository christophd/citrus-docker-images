<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.consol.citrus</groupId>
  <artifactId>citrus-docker-images</artifactId>
  <name>citrus-docker-images</name>
  <version>1.0.0</version>
  <packaging>pom</packaging>

  <properties>
    <citrus.admin.version>1.0.0-beta-5</citrus.admin.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>io.fabric8</groupId>
          <artifactId>docker-maven-plugin</artifactId>
          <version>0.19.0</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2.1</version>
        <executions>
          <execution>
            <id>download-citrus-admin</id>
            <phase>process-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <skip>${settings.offline}</skip>
              <executable>curl</executable>
              <arguments>
                <argument>file://${settings.localRepository}/com/consol/citrus/citrus-admin-web/${citrus.admin.version}/citrus-admin-web-${citrus.admin.version}.jar</argument>
                <argument>--create-dirs</argument>
                <argument>-o</argument>
                <argument>src/main/docker/citrus-admin/latest/citrus-admin-web.jar</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <verbose>true</verbose>
          <images>
            <image>
              <alias>citrus</alias>
              <name>consol/citrus</name>
              <build>
                <tags>
                  <tag>latest</tag>
                  <tag>2.7</tag>
                </tags>
                <dockerFileDir>citrus/2.7</dockerFileDir>
              </build>
            </image>
            <image>
              <alias>citrus-admin</alias>
              <name>consol/citrus-admin</name>
              <build>
                <tags>
                  <tag>1.0.0-beta-4</tag>
                </tags>
                <dockerFileDir>citrus-admin/1.0.0-beta</dockerFileDir>
              </build>
            </image>
            <image>
              <alias>citrus-admin</alias>
              <name>consol/citrus-admin</name>
              <build>
                <tags>
                  <tag>latest</tag>
                  <tag>${citrus.admin.version}</tag>
                </tags>
                <dockerFileDir>citrus-admin/latest</dockerFileDir>
              </build>
            </image>
          </images>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
